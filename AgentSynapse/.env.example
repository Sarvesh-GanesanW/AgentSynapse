# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# Memory Storage
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

DYNAMODB_TABLE_EPISODIC=aceEpisodicMemory
DYNAMODB_TABLE_AGENT_CONFIG=aceAgentConfig
DYNAMODB_TABLE_TOOL_REGISTRY=aceToolRegistry
DYNAMODB_TABLE_SESSIONS=aceAgentSessions

OPENSEARCH_ENDPOINT=https://your-opensearch-domain.us-east-1.es.amazonaws.com
OPENSEARCH_INDEX_SEMANTIC=ace-semantic-memory

RDS_HOST=your-rds-instance.us-east-1.rds.amazonaws.com
RDS_PORT=5432
RDS_DATABASE=ace_knowledge_graph
RDS_USERNAME=postgres
RDS_PASSWORD=your_password

S3_BUCKET_PROCEDURAL=ace-procedural-memory
S3_BUCKET_TOOL_CODE=ace-tool-code

APP_NAME=ACE Framework
APP_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# Agent Configuration
MAX_AGENT_RECURSION_DEPTH=5
MAX_PARALLEL_AGENTS=10
AGENT_TIMEOUT_SECONDS=300
MAX_TOKEN_LIMIT=100000
DEFAULT_TEMPERATURE=0.7

# Memory Settings
WORKING_MEMORY_TTL_SECONDS=3600
EPISODIC_RETENTION_DAYS=90
MEMORY_DECAY_THRESHOLD_DAYS=7
MAX_CONTEXT_TOKENS=200000
TOP_K_SEMANTIC_RETRIEVAL=10

# Multi-Tenant Settings
ENABLE_TENANT_ISOLATION=true
DEFAULT_COST_LIMIT_USD=100.0
ENABLE_AUDIT_LOGGING=true

# Async Agent Settings
SQS_QUEUE_ASYNC_AGENTS=ace-async-agents
SQS_VISIBILITY_TIMEOUT=900

# Security
API_KEY_HEADER=X-API-Key
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# Monitoring
ENABLE_XRAY_TRACING=true
ENABLE_CLOUDWATCH_METRICS=true
METRICS_NAMESPACE=ACE/Agents
